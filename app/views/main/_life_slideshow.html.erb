<div id="carousel-tshirt" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-tshirt" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-tshirt" data-slide-to="1"></li>
    <li data-target="#carousel-tshirt" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag("hustle.jpg", class: "img-responsive rounded") %>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
      <%= image_tag("reason.jpg", class: "img-responsive rounded") %>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
      <%= image_tag("camping.jpg", class: "img-responsive rounded") %>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
      <%= image_tag("t-shirts/code-hearted-curly-girl.jpg", class: "img-responsive") %>
      <div class="carousel-caption">
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-tshirt" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-tshirt" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>