<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Published at</th>
      <th>State</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, blog_post_path(post) %></td>
        <td><%= post.published_at %></td>
        <td><%= post.state %></td>
        <td><%= link_to 'Edit', edit_blog_post_path(post) %></td>
        <td><%= link_to 'Destroy', blog_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>